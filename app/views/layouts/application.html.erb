<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag "#{current_theme}" %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  
  <body>
    <% if current_user.present? %>
      <% if current_user.theme == 'light' %>
        <%- current_user.theme = 'dark' %>
        <%- current_user.save %>
        <%= link_to "dark mode", welcome_index_path, method: :get %>
      <% else  %>
        <%- current_user.theme = 'light' %>
        <%- current_user.save %>
        <%= link_to "light mode", welcome_index_path, method: :get %>
      <% end %>
    <% end %>

    <div class="LogIn">
    <% if user_signed_in? %>
      <%= current_user.email %>
      <%= link_to t('.log_out'), destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to t('.log_in'), new_user_session_path %> 
    <% end %>

    <div class="UserRoles">
    <% if can? :manage, User %>
      <%= link_to t('.users'), users_index_path %>
    <% end %>
    

    </div>
    <%= yield %>
  </body>
</html>
